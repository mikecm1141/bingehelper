<%= form_for [:admin, @show] do |f| %>
  <%= f.label      :title %>
  <%= f.text_field :title, autofocus: true %>

  <%= f.label  :year %>
  <%= f.select :year, (Date.today.year-65)..(Date.today.year), selected: @show.year || Time.current.year %>

  <%= f.label      :runtime, 'Episode Runtime (in minutes)' %>
  <%= f.text_field :runtime %>

  <%= f.submit class: 'btn waves-effect waves-light' %>
<% end %>
