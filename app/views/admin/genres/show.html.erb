<h4 class="center-align"><%= @genre.title %></h4>
<h5 class="center-align">
  <%= link_to 'Edit', edit_admin_genre_path(@genre), class: 'waves-effect waves-light btn-small' %>
  <%=
      link_to 'Delete',
      admin_genre_path(@genre),
      method: :delete,
      data: confirm_destroy(@genre.title),
      class: 'waves-effect waves-light btn-small'
  %>
</h5>

<ul class="collection with-header small-container">
  <li class="collection-header"><h6>Shows in this Genre</h6></li>
  <% @genre.shows.each do |show| %>
    <%= link_to show.title, admin_show_path(show), class: "collection-item" %>
  <% end %>
</ul>
